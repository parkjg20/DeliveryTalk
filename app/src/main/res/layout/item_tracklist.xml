<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tracklist_date"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:textAlignment="center"
        android:paddingTop="18dp"
        android:text="04.30"
        android:textSize="12dp"
        android:textColor="#676767"
        android:letterSpacing="-0.140"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/circle_border_textview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <TextView
        android:id="@+id/tracklist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="5dp"
        android:text="수제슬라임 200ml 외 5개"
        android:textSize="16dp"
        android:textColor="#000000"
        android:letterSpacing="-0.10"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tracklist_date"/>

    <TextView
        android:id="@+id/tracklist_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="인스타마켓"
        android:textSize="13dp"
        android:textColor="#000000"
        android:letterSpacing="-0.10"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@id/tracklist_title"
        app:layout_constraintStart_toEndOf="@id/tracklist_date"/>

    <TextView
    android:id="@+id/tracklist_carrier"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:text="CJ대한통운"
    android:textSize="12dp"
    android:textColor="#8D8D8D"
    android:letterSpacing="-0.100"
    app:layout_constraintTop_toBottomOf="@id/tracklist_sender"
    app:layout_constraintStart_toEndOf="@id/tracklist_date"/>

    <TextView
        android:id="@+id/tracklist_waybill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="123456789012"
        android:textSize="12dp"
        android:textColor="#8D8D8D"
        android:letterSpacing="-0.100"
        app:layout_constraintTop_toBottomOf="@id/tracklist_sender"
        app:layout_constraintStart_toEndOf="@id/tracklist_carrier"/>

    <ImageButton
        android:id="@+id/tracklist_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/st_btn_alarm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tracklist_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>