<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Activities.popup.LogoutPopupActivity">

    <TextView
        android:id="@+id/logoutPopup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정말 로그아웃 하시겠습니까?"
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"

        android:letterSpacing="-0.100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

    />
    <TextView
        android:id="@+id/logoutPopup_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="배송조회 목록 및 설정은 초기화됩니다.\n로그인시 번호 재인증이 필요합니다."
        android:textSize="14dp"
        android:textColor="#707070"
        android:letterSpacing="-0.100"
        android:layout_marginBottom="26dp"
        app:layout_constraintTop_toBottomOf="@id/logoutPopup_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/logoutPopup_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textSize="14dp"
        android:textColor="#707070"
        android:letterSpacing="-0.100"
        android:background="#FFFFFF"
        android:layout_marginTop="26dp"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/logoutPopup_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/logoutPopup_yes"


        />
    <Button
        android:id="@+id/logoutPopup_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textSize="14dp"
        android:textColor="#0DCCB5"
        android:letterSpacing="-0.100"
        android:background="#FFFFFF"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="96dp"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/logoutPopup_content"
        app:layout_constraintStart_toStartOf="@id/logoutPopup_no"
        app:layout_constraintEnd_toEndOf="parent"


        />

</android.support.constraint.ConstraintLayout>