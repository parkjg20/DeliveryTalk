<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Activities.popup.SendQuestionPopupActivity">

    <TextView
        android:id="@+id/sendQuestionPopup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전송되었습니다."
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        android:letterSpacing="-0.100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <TextView
        android:id="@+id/sendQuestionPopup_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소중한 의견 주셔서 감사합니다.\n반영하여 개선하도록 하겠습니다."
        android:textSize="15dp"
        android:textColor="#707070"
        android:letterSpacing="-0.100"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"

        app:layout_constraintTop_toBottomOf="@id/sendQuestionPopup_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <Button
        android:id="@+id/sendQuestionPopup_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="확인"
        android:textSize="14dp"
        android:textColor="#0DCCB5"
        android:letterSpacing="-0.100"
        android:background="#FFFFFF"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/sendQuestionPopup_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        />

</android.support.constraint.ConstraintLayout>